.text_css{
  font-weight: bold;
  font-size: 40vw; 
  z-index: 100;
  -webkit-background-clip:text; 
  -webkit-text-fill-color:transparent; 
  opacity: 0;
  position: absolute;
  top: 22%;
  left: calc(50% - 22vw);
  -webkit-text-stroke: 4px yellow;  
  animation-fill-mode: forwards;
  font-family: '华文行楷';
}
.text1{
  background-image:-webkit-linear-gradient(bottom,red,#fd8403,yellow); 
  animation: 1s linear normal;
  /* animation-name: text1; */
  animation-delay: 2.5s;
}
@keyframes text1{
  0%{opacity: 0;}
  99%{opacity: 1;}
  100%{opacity: 0;}
}
.text2{
  background-image:-webkit-linear-gradient(bottom,red,#fd8403,yellow); 
  animation: text1 1s linear normal;
  animation-delay: 3.5s;
}
.text3{
  background-image:-webkit-linear-gradient(bottom,red,#fd8403,yellow); 
  animation: text1 2s linear normal;
  animation-delay: 4.5s;
}
.text4{
  background-image:-webkit-linear-gradient(bottom,red,#fff,yellow); 
  -webkit-text-stroke: 1px yellow;  
  opacity: 0;
  animation: 1s linear infinite;
  animation-name: text4;
  animation-delay: 6.5s;
  animation-fill-mode: forwards;
  position: absolute;
  font-size: 18vw;
  top: 8.5%;
  left: calc(50% - 35vw);
  font-family: '华文行楷';
}
@keyframes text4{
  0%{background-image:-webkit-linear-gradient(bottom,red,#fd8403,yellow); opacity: 1;transform: scale(1)}
  50%{background-image:-webkit-linear-gradient(bottom,#fd8403,yellow,red); opacity: 1;transform: scale(1.2)}
  100%{background-image:-webkit-linear-gradient(bottom,yellow,red,#fd8403); opacity: 1;transform: scale(1)}
}
