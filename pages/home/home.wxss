.logo{
  position: absolute;
  width: 25vw;
  height: 30vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  animation: 4s linear infinite;
  border-radius: 50%;
  color: red;
  font-family: '楷体';
  font-weight: bold;
  transform: rotate(-10deg);
  animation-name: logo;
}
.logo image{
  width: 100%;
  height: 100%;
}
@keyframes logo{
  0%{transform: translateY(0vw) rotate(-10deg)}
  25%{transform: translateY(-2vw) rotate(-10deg)}
  50%{transform: translateY(0vw) rotate(-10deg)}
  75%{transform: translateY(2vw) rotate(-10deg)}
  100%{transform: translateY(0vw) rotate(-10deg)}
}
